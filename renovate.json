{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "mergeConfidence:all-badges"
  ],
  "ignoreTests": true,
  "helmv3": {
    "rangeStrategy": "bump"
  },
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "description": "Ignore the incorrect Docker dependency detection from helmv3 for Unifi OCI repo.",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/mkilchhofer/unifi-chart/unifi"
      ],
      "enabled": false
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Force Unifi Chart dependency to track GitHub Releases.",
      "fileMatch": [
        "helm/unifi/Chart\\.yaml"
      ],
      "matchStrings": [
        // This is the critical, precise regex: it looks for 'name: unifi' AND THEN 'version: "..."'
        "name: unifi\\s*\\n\\s*version: \"(?<currentValue>.*?)\"" 
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "mkilchhofer/unifi-chart",
      "versioningTemplate": "semver",
      "extractVersion": "^unifi-(?<version>.*)$"
    }
  ]
}