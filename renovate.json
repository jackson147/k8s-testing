{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "mergeConfidence:all-badges"
  ],
  "ignoreTests": true,
  "helmv3": {
    "rangeStrategy": "bump"
  },
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "description": "Ignore the incorrect Docker dependency detection from helmv3 for Unifi OCI repo.",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/mkilchhofer/unifi-chart/unifi"
      ],
      "enabled": false
    },
    {
      "description": "Apply tag cleaning to the Unifi Chart dependency to find 1.14.1, etc.",
      "matchPackageNames": [
        "mkilchhofer/unifi-chart"
      ],
      "matchDatasources": [
        "github-releases"
      ],
      // This is now in the valid location: inside a package rule
      "extractVersion": "^unifi-(?<version>.*)$" 
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Force Unifi Chart dependency to track GitHub Releases.",
      "fileMatch": [
        "helm/unifi/Chart\\.yaml"
      ],
      "matchStrings": [
        "name: unifi\\s*\\n\\s*version: \"(?<currentValue>.*?)\""
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "mkilchhofer/unifi-chart",
      "versioningTemplate": "semver"
      // Note: extractVersion is NOT here
    }
  ]
}