{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "groupName": "Docker Images",
      "automerge": true,
      "major": {
        "automerge": false,
        "enabled": true
      },
      "minor": {
        "automerge": true,
        "enabled": true
      },
      "patch": {
        "automerge": true,
        "enabled": true
      }
    }
  ]
}
