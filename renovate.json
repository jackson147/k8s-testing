{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "ignoreTests": true,
  "helmv3": {
    "rangeStrategy": "bump"
  },
  "customManagers": [
    {
      "customType": "regex",
      "description": "Unifi Chart GitHub Releases Override",
      // File pattern needed for custom managers (Renovate converted this to array)
      "managerFilePatterns": [
        "(^|/)Chart\\.yaml$"
      ],
      // This regex extracts the version from the unifi chart's dependency block
      "matchStrings": [
        "name: unifi\\s+\\s*version: \"(?<currentValue>.*?)\"\\s+\\s*repository:\\s*oci://ghcr\\.io/mkilchhofer/unifi-chart"
      ],
      // Forces the source to look at GitHub Releases
      "datasourceTemplate": "github-releases",
      // Provides the owner/repo name for the GitHub datasource
      "depNameTemplate": "mkilchhofer/unifi-chart",
      "versioningTemplate": "semver"
    }
  ]
}
