{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "ignoreTests": true,
  "helmv3": {
    "rangeStrategy": "bump"
  },
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "description": "Ignore incorrect unifi-chart Docker dependency detected by helmv3",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["ghcr.io/mkilchhofer/unifi-chart/unifi"],
      "enabled": false
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Unifi Chart GitHub Releases Override",
      "fileMatch": [
        "helm/unifi/Chart\\.yaml$" // Target ONLY this specific file
      ],
      "matchStrings": [
        // Match the version line, allowing for optional quotes.
        "version:\\s*['\"]?(?<currentValue>\\S+?)['\"]?"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "mkilchhofer/unifi-chart",
      "versioningTemplate": "semver"
    }
  ]
}